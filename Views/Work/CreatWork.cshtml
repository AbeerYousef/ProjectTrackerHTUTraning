@model FinalProject.Dto.WorkDto

@{
    ViewData["Title"] = "CreatWork";
    var DeveloperId=ViewBag.DeveloperId;
    var SprintTask=(SprintTask)ViewBag.SprintTask;
}
<br /><br />
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <br /><br />
            <b>ADD  WORK INFORMATION </b>
            <hr />
            <form asp-action="InsertWork" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group" hidden>
                    <label class="control-label">Task Name</label>
                    <input class="form-control" value="@SprintTask.Title " disabled />
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" hidden />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="RejectionNote" class="control-label"></label>
                    <input asp-for="RejectionNote" class="form-control" />
                    <span asp-validation-for="RejectionNote" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="SprintTaskId" class="control-label"></label>
                    <input type="number" asp-for="SprintTaskId" class="form-control" value="@SprintTask.Id" hidden />
                    <span asp-validation-for="SprintTaskId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TheFile" class="control-label">UpLoad File</label>
                    <input type="file" asp-for="TheFile" class="form-control" />
                    <span asp-validation-for="TheFile" class="text-danger"></span>
                </div>

                <div class="form-group" hidden>
                    <label asp-for="DeveloperId" class="control-label"></label>
                    <input asp-for="DeveloperId" class="form-control" value="@DeveloperId" hidden />
                    <span asp-validation-for="DeveloperId" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="StatusWorkDto" class="control-label"></label>
                    <input asp-for="StatusWorkDto" class="form-control" value="Pending" hidden />
                    <span asp-validation-for="StatusWorkDto" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="Create" class="btn LeftColer" />
                </div>
            </form>

            <div>

                <div class="col-sm-4" > <a href="/Work/ShowWorks?SprintTaskId=@SprintTask.Id" type="button" class="btn LeftColer" style=" margin-left: -9%;; margin-bottom: 26px; "> Back To Task</a> </div>

            </div>

            


            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }


        </div>
            <div class="col-sm-6">
                <br /><br />
                <h2><img src="~/assets/img/LOGO.png" width="100%" alt="Alternate Text" /></h2>
            </div>
    </div>
</div>
                

               
             
