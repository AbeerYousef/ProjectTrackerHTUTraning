
@using FinalProject.Dto
@model SprintTaskDto;

@{
    var SprintId = (int)ViewBag.SprintId ;
    var Developers = (List<Developer>)ViewBag.Developers;
}

<div class="container">

    <div class="row">
        <div class="col-sm-8">
            <br /><br />
            <b>ADD  TASK INFORMATION </b>
            <hr />

            <form action="/SprintTask/InsertSprintTask">


                <div class="form-group">

                    <input type="number" name="SprintId" value="@SprintId" class="form-control" hidden />
                </div>

                <div class="form-group">
                    <label for="Title">Task Title :</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Description">Task Description :</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input hidden="hidden" type="text" name="StatusSprintTaskDto" value="Pending" />
                </div>
                <br />
                <div class="form-group">


                    @{

                        List<SelectListItem> MyList = new List<SelectListItem>();
                        SelectListItem listItem = new SelectListItem();
                        foreach (var Developer in Developers)
                        {
                            listItem = new SelectListItem();
                            listItem.Text = "" + Developer.FirstName + "  " + Developer.LastName + "";
                            listItem.Value = "" + Developer.Id + "";
                            MyList.Add(listItem);
                        }

                    }
                    @Html.DropDownList("DeveloperId", MyList, "Developers")

                </div>




                <br />


                <button type="submit" class="btn LeftColer">Creat</button>
            </form>
        </div>

        <div class="col-sm-4">
            <br /><br />
            <h2><img src="~/assets/img/LOGO.png" width="100%" alt="Alternate Text" /></h2>
        </div>


    </div>

</div>


<script>
    $(document).ready(function () {
        $('.js-example-basic-single').select2();
    });

</script>

